[user]
  name = Jerry Nummi
  email = jerry@neo.com

[color]
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[merge]
  tool = opendiff

[core]
  legacyheaders = false
  autocrlf      = false
  excludesfile = /Users/nummi/.gitignore_global
  quotepath = false

[repack]
  usedeltabaseoffset = true

[alias]
  br   = branch
  ch   = cherry -v origin
  ci   = commit
  co   = checkout
  df   = diff
  dump = cat-file -p
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  mine = log --author=Jerry
  put  = "push origin HEAD"
  st   = status
  type = cat-file -t
	undo = reset HEAD@{1}

[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)

[git-pair]
  authors = Aaron Christy <aaron@neo.com>
  authors = Felix Flores <felix@neo.com>
  authors = Jerry Nummi <jerry@neo.com>
  authors = Jim Weirich <jim@neo.com>
  authors = Ken Barker <ken@theneo.com>
  authors = Paul Wilson <paul@neo.com>
  authors = Tony Schneider <tonywok@gmail.com>
  authors = Matt Jones <matt.jones@neo.com>
  authors = Alex Burkhart <saterus@gmail.com>
  authors = John Andrews <john@neo.com>

[credential]
  helper = osxkeychain
[url "https://"]
	insteadOf = git://
